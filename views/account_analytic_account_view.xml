<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_analytic_view_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.form.inherit</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <group name="main" position="inside">
                <group name="overhead" string="Overhead Cost" col="2">
                    <label for="overhead" string="Overhead Amount (Fixed)" class="oe_inline" invisible="overhead_type != 'fixed'"/>
                    <label for="overhead" string="Overhead % (Calculated from Landed Cost)" class="oe_inline" invisible="overhead_type != 'percentage'"/>
                    <field nolabel="1" name="overhead" class="oe_inline"/>
                    <field name="overhead_type" class="oe_inline" invisible="1"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
